<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/statistics.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistics</title>
</head>
<body>
    <div class="Sidebar">
        <a href="/statistics">
            <div><i class="uil uil-home"></i> Dashboard</div>
        </a>
        <a href="/dashboardAdmin">
            <div><i class="uil uil-user"></i> Gestion des utilisateurs</div>
        </a>
        <a href="/gestionAnnonces">
            <div><i class="uil uil-list-ul"></i> Gestion des annonces</div>
        </a>
        <a href="/deconnexion">
            <div><i class="uil uil-sign-out-alt"></i>Logout</div>
        </a>
    </div>
    <div class="Container">
        <h1>Statistiques Globales</h1>
        
        <div class="stats-boxes">
            <div class="stats-box">
                <h3>Total Utilisateurs</h3>
                <p id="totalUsers"><%= totalUsers %></p>
            </div>
            <div class="stats-box">
                <h3>Total Annonces</h3>
                <p id="totalAnnonces"><%= totalAnnonces %></p>
            </div>
            <div class="stats-box">
                <h3>Total Messages</h3>
                <p id="totalMessages"><%= totalMessages %></p>
            </div>
            <div class="stats-box">
                <h3>Total des Visites</h3>
                <p id="totalTransactions"><%= totalVisits %></p>
            </div>
        </div>

        <!-- Chart containers with analytics styling -->
        <div class="analytics-container">
            <div class="analytics">
                <h2>Statistiques des Visites</h2>
                <canvas id="visitChart"></canvas>
            </div>
            <div class="analytics">
                <h2>Statistiques des Annonces</h2>
                <canvas id="annonceChart"></canvas>
            </div>
        </div>

    </div>

    <!-- JavaScript to render charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const visitStats = <%- JSON.stringify(visitStats) %>;
            const annonceStats = <%- JSON.stringify(annonceStats) %>;
    
            console.log('Visit Stats:', visitStats);
            console.log('Annonce Stats:', annonceStats);
    
            // Initialize charts
            const visitCtx = document.getElementById('visitChart').getContext('2d');
new Chart(visitCtx, {
    type: 'line',
    data: {
        labels: visitStats.labels,
        datasets: [{
            label: 'Visites',
            data: visitStats.data,
            borderColor: 'rgba(75, 192, 192, 1)',
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    stepSize: 1 // Define step size for the y-axis
                }
            }
        }
    }
});
    
            const annonceCtx = document.getElementById('annonceChart').getContext('2d');
            new Chart(annonceCtx, {
                type: 'bar',
                data: {
                    labels: annonceStats.labels,
                    datasets: [{
                        label: 'Annonces Publi√©es',
                        data: annonceStats.data,
                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>
